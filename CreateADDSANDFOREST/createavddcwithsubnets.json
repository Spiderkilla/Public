
{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {

        "domainName": {
            "type": "string",
            "metadata": {
                "description": "Domain name for Active Directory, ex: tenant.onmicrosoft.com"
            }
        },
        "adminUsername": {
            "type": "string",
            "metadata": {
                "description": "Username for the Virtual Machine admin."
            }
        },
        "adminPassword": {
            "type": "securestring",
            "metadata": {
                "description": "Password for the admin."
            }
        },
        "PublicIP": {
            "type": "string",
            "metadata": {
                "description": "Will add your Public Ip to the NSG rule to allow you to access the VM, ex: can be found there https://ipinfo.io/"
            }
        },
        "vmName": {
            "type": "string",
            "defaultValue": "avdlabdc01",
            "metadata": {
                "description": "Name of the Virtual Machine."
            }
        },
        "vmSize": {
            "type": "string",
            "defaultValue": "Standard_B2ms",
            "metadata": {
                "description": "Size of the Virtual Machine."
            }
        },
        "dnsServerIPAddress": {
            "type": "array",
            "defaultValue": [ "10.5.1.4", "168.63.129.16" ],
            "metadata": {
                "description": "IP addresses of the DNS server."
            }
        },
        "virtualNetworkName": {
            "type": "string",
            "defaultValue": "AVD-Vnet",
            "metadata": {
                "description": "Name for the Virtual Network."
            }
        },
        "vnetAddressPrefix": {
            "type": "string",
            "defaultValue": "10.5.0.0/16",
            "metadata": {
                "description": "Address prefix for the Virtual Network."
            }
        },
        "Identity-Subnet-Name": {
            "type": "string",
            "defaultValue": "Identity-Subnet",
            "metadata": {
                "description": "Name of Identity-Subnet."
            }
        },
        "Identity-Subnet-Prefix": {
            "type": "string",
            "defaultValue": "10.5.1.0/24",
            "metadata": {
                "description": "Address prefix for Identity-Subnet."
            }
        },
        "SessionHost-Subnet-name": {
            "type": "string",
            "defaultValue": "SessionHost-Subnet",
            "metadata": {
                "description": "Name of SessionHost-Subnet."
            }
        },
        "SessionHost-Subnet-Prefix": {
            "type": "string",
            "defaultValue": "10.5.2.0/24",
            "metadata": {
                "description": "Address prefix for SessionHost-Subnet"
            }
        },
        "imageSku": {
            "type": "string",
            "defaultValue": "2022-datacenter-g2",
            "allowedValues": [
                "2019-Datacenter",
                "2019-datacenter-gensecond",
                "2022-datacenter",
                "2022-datacenter-azure-edition",
                "2022-datacenter-g2"
            ],
            "metadata": {
                "description": "Image SKU"
            }
        }
    },

    "variables": {
        "nicName": "[concat(parameters('vmName'),'-nic')]",
        "nsgName": "[concat('AVDLABS','-nsg')]",
        "publicIPAddressName": "[concat(parameters('vmName'),'-pubip')]"

    },

    "resources": [
        {
            "type": "Microsoft.Network/networkSecurityGroups",
            "apiVersion": "2023-04-01",
            "name": "[variables('nsgName')]",
            "location": "[resourceGroup().location]",
            "tags": {
                "DeployedWith": "ARM Template",
                "Project": "AVDLABS",
                "CreatedBy": "SI"
            },
            "properties": {
                "securityRules": [
                    {
                        "name": "AllowRDP",
                        "properties": {
                            "access": "Allow",
                            "description": "Allow my public IP to access RDP.",
                            "destinationAddressPrefix": "*",
                            "destinationPortRange": "3389",
                            "direction": "Inbound",
                            "priority": 110,
                            "protocol": "*",
                            "sourceAddressPrefix": "[parameters('PublicIP')]",
                            "sourcePortRange": "*"
                        }
                    }
                ]
            }
        },
        {
            "type": "Microsoft.Network/virtualNetworks",
            "apiVersion": "2021-05-01",
            "name": "[parameters('virtualNetworkName')]",
            "location": "[resourceGroup().location]",
            "tags": {
                "DeployedWith": "ARM Template",
                "Project": "AVDLABS",
                "CreatedBy": "SI"
            },
            "dependsOn": [
                "[resourceId('Microsoft.Network/networkSecurityGroups',variables('nsgName'))]"
            ],
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "[parameters('vnetAddressPrefix')]"
                    ]
                },
                "dhcpOptions": {
                    "dnsServers": "[parameters('dnsServerIPAddress')]"
                },
                "subnets": [
                    {
                        "name": "[parameters('Identity-Subnet-Name')]",
                        "properties": {
                            "addressPrefix": "[parameters('Identity-Subnet-Prefix')]",
                            "networkSecurityGroup": {
                                "id": "[resourceId('Microsoft.Network/networkSecurityGroups', variables('nsgName'))]"
                            }
                        }
                    },
                    {
                        "name": "[parameters('SessionHost-Subnet-name')]",
                        "properties": {
                            "addressPrefix": "[parameters('SessionHost-Subnet-Prefix')]"
                        }
                    }
                ]
            }
        },
        {
            "apiVersion": "2023-04-01",
            "type": "Microsoft.Network/publicIPAddresses",
            "name": "[variables('publicIPAddressName')]",
            "location": "[resourceGroup().location]",
            "tags": {
                "DeployedWith": "ARM Template",
                "Project": "AVDLABS",
                "CreatedBy": "SI"
            },
            "sku": {
                "name": "Standard"
            },
            "properties": {
                "publicIPAllocationMethod": "Static",
                "publicIPAddressVersion": "IPv4"
            }
        },

        {
            "type": "Microsoft.Network/networkInterfaces",
            "apiVersion": "2021-05-01",
            "name": "[variables('nicName')]",
            "location": "[resourceGroup().location]",
            "tags": {
                "DeployedWith": "ARM Template",
                "Project": "AVDLABS",
                "CreatedBy": "SI"
            },
            "dependsOn": [
                "[resourceId('Microsoft.Network/virtualNetworks',parameters('virtualNetworkName'))]",
                "[resourceId('Microsoft.Network/publicIPAddresses', variables('publicIPAddressName'))]"
            ],
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "ipconfig1",
                        "properties": {
                            "subnet": {
                                "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets',  parameters('virtualNetworkName'), parameters('Identity-Subnet-Name'))]"
                            },
                            "publicIpAddress": {
                                "id": "[resourceId('Microsoft.Network/publicIpAddresses', variables('publicIPAddressName'))]"
                            }
                        }
                    }
                ]
            }
        },
        {
            "type": "Microsoft.Compute/virtualMachines",
            "apiVersion": "2021-07-01",
            "name": "[parameters('vmName')]",
            "location": "[resourceGroup().location]",
            "tags": {
                "DeployedWith": "ARM Template",
                "Project": "AVDLABS",
                "CreatedBy": "SI"
            },
            "dependsOn": [
                "[resourceId('Microsoft.Network/networkInterfaces', variables('nicName'))]"
            ],
            "properties": {
                "hardwareProfile": {
                    "vmSize": "[parameters('vmSize')]"
                },
                "osProfile": {
                    "computerName": "[parameters('vmName')]",
                    "adminUsername": "[parameters('adminUsername')]",
                    "adminPassword": "[parameters('adminPassword')]"
                },
                "storageProfile": {
                    "imageReference": {
                        "publisher": "MicrosoftWindowsServer",
                        "offer": "WindowsServer",
                        "sku": "[parameters('imageSku')]",
                        "version": "latest"
                    },
                    "osDisk": {
                        "createOption": "FromImage",
                        "managedDisk": {
                            "storageAccountType": "StandardSSD_LRS"  
                        }
                    }
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces', variables('nicName'))]"
                        }
                    ]
                },
                "diagnosticsProfile": {
                    "bootDiagnostics": {
                        "enabled": true
                    }
                }
            }
        },
        {
            "type": "Microsoft.Compute/virtualMachines/extensions",
            "name": "[concat(parameters('vmName'), '/CustomScriptExtension')]",
            "apiVersion": "2020-06-01",
            "location": "[resourceGroup().location]",
            "tags": {
                "DeployedWith": "ARM Template",
                "Project": "AVDLABS",
                "CreatedBy": "SI"
            },
            "dependsOn": [
                "[concat('Microsoft.Compute/virtualMachines/', parameters('vmName'))]"
            ],
            "properties": {
                "publisher": "Microsoft.Compute",
                "type": "CustomScriptExtension",
                "typeHandlerVersion": "1.10",
                "autoUpgradeMinorVersion": true,
                "settings": {
                },
                "protectedSettings": {
                    "fileUris": [
                        "https://raw.githubusercontent.com/Spiderkilla/Public/main/CreateADDSANDFOREST/Install-AD1.ps1"
                    ],
                    "commandToExecute": "[concat('powershell -ExecutionPolicy Unrestricted -File Install-AD1.ps1 ', parameters('DomainName') ,' ', parameters('adminPassword'))]"
                }
            }
        }

    ],
    "outputs": {}
}
